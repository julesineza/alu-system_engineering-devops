#!/usr/bin/env bash
# Installs and configures HAProxy on lb-01 server
# Configures HAProxy to distribute traffic to web-01 and web-02 using roundrobin

set -e  # Exit on any error

# Update package list and install HAProxy
apt-get update -y
apt-get install -y haproxy

# Enable HAProxy to be started by init script
echo "ENABLED=1" | tee /etc/default/haproxy

# Configure hostnames (replace STUDENT_ID with actual student ID)
# Note: In a real scenario, you might get this from user input or environment
STUDENT_ID="6861"  # Change this to your actual student ID
hostnamectl set-hostname "${STUDENT_ID}-lb-01"

# Backup original configuration
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure HAProxy with dynamic backend servers
cat > /etc/haproxy/haproxy.cfg << EOF
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

    # Default SSL material locations
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

    # See: https://ssl-config.mozilla.org/#server=haproxy&server-version=2.0.3&config=intermediate
    ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
    ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
    ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000
    errorfile 400 /etc/haproxy/errors/400.http
    errorfile 403 /etc/haproxy/errors/403.http
    errorfile 408 /etc/haproxy/errors/408.http
    errorfile 500 /etc/haproxy/errors/500.http
    errorfile 502 /etc/haproxy/errors/502.http
    errorfile 503 /etc/haproxy/errors/503.http
    errorfile 504 /etc/haproxy/errors/504.http

frontend http_front
    bind *:80
    stats uri /haproxy?stats
    default_backend http_back

backend http_back
    balance roundrobin
    server ${STUDENT_ID}-web-01 ${STUDENT_ID}-web-01:80 check
    server ${STUDENT_ID}-web-02 ${STUDENT_ID}-web-02:80 check
EOF

# Test HAProxy configuration
if ! haproxy -c -f /etc/haproxy/haproxy.cfg; then
    echo "HAProxy configuration test failed! Restoring backup..."
    cp /etc/haproxy/haproxy.cfg.bak /etc/haproxy/haproxy.cfg
    exit 1
fi

# Enable and start HAProxy service
systemctl enable haproxy
systemctl restart haproxy

# Check service status
if systemctl is-active --quiet haproxy; then
    echo "HAProxy is running successfully"
else
    echo "HAProxy failed to start. Check logs with: journalctl -u haproxy"
    exit 1
fi

echo "HAProxy installation and configuration complete"
echo "Load balancer is now distributing traffic between ${STUDENT_ID}-web-01 and ${STUDENT_ID}-web-02 using roundrobin"