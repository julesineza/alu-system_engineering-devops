#!/usr/bin/env bash
# Installs and configures HAProxy load balancer

apt-get update -y
apt-get install -y haproxy

# Enable HAProxy via init script
echo "ENABLED=1" > /etc/default/haproxy

# Backup config
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Replace with required minimal configuration
cat > /etc/haproxy/haproxy.cfg << 'EOF'
global
    log /dev/log local0

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server 6861-web-01 44.201.180.250:80 check
    server 6861-web-02 54.208.88.137:80 check
EOF

systemctl restart haproxy
